{
  "compilerOptions": {
    "outDir": "./build/package",
    "target": "es2015",
    "moduleResolution": "node",
    "lib": ["es5", "es6"],
    "types": ["node", "jest"],
    "strict": true,
    "alwaysStrict": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "__test__"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage"
  ]
}
